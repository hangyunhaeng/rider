<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- 잔액 검증 스케줄러 -->
	<bean id="balanceConfirmBean" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="balanceConfirm" />
		<property name="targetMethod" value="execute" />
		<property name="concurrent" value="false" />
	</bean>

	<bean id="balanceConfirmTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="balanceConfirmBean" />
		<property name="cronExpression" value="0 0 4 * * ?" />
		<!-- 초(0~59), 분(0~59), 시간(0~23), 일(1~31), 월(1~12), 요일(0~7) : 0 일요일, 6토요일 -->
	</bean>


	<bean id="balanceConfirmScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="balanceConfirmTrigger" />
			</list>
		</property>
	</bean>

</beans>
